{
	"manifest_version": 2,

	"name": "HTPC Linker",
	"description": "Integrates HTPC features into Chrome.",
	"version": "0.0.0",

	"browser_action": {
		"default_icon": "icon_32x32.png",
		"default_popup": "popup.html",
		"default_title": "%website_title% Options"
	},
	"background": {
		"scripts": ["contextMenus.js"]//, "popup.js" ]
	},
	"icons": {
		"16": "icon_32x32.png"
	},

	"permissions": [ "contextMenus", "*://localhost/*", "activeTab", "storage" ]
}